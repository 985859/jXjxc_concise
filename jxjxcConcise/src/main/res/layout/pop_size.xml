<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="onClicek"
            type="com.yiande.jxjxc.myInterface.EventConsume" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/size_14"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_bankground_blue_6"
            android:gravity="center"
            android:text="小"
            android:onClick="@{()->onClicek.accept(1)}"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/size_16"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_bankground_blue_6"
            android:gravity="center"
            android:onClick="@{()->onClicek.accept(2)}"
            android:text="中"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/size_18"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_bankground_blue_6"
            android:gravity="center"
            android:text="大"
            android:onClick="@{()->onClicek.accept(3)}"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>